<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">



    <Button
        android:id="@+id/buttonStatistique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Statistiques"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18dp" />



    <ImageButton
        android:id="@+id/buttonStartTravail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/timer"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:onClick="startTravail"
        android:src="@drawable/play"
        />


    <ImageButton
        android:id="@+id/buttonInitTpsTravail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/timer"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:onClick="initTpsTravail"
        android:src="@drawable/play"/>

    <ImageButton
        android:id="@+id/buttonReset"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/timer"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:onClick="reset"
        android:src="@drawable/reset"/>


    <ImageButton
        android:id="@+id/buttonStartRepos"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/timer"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:onClick="startRepos"
        android:src="@drawable/play"/>

    <ImageButton
        android:id="@+id/buttonPauseTravail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/timer"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:onClick="pauseTravail"
        android:src="@drawable/pause"
         />

    <ImageButton
        android:id="@+id/buttonPauseRepos"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/timer"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:onClick="pauseRepos"
        android:src="@drawable/pause"
         />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="350sp"
        android:layout_marginTop="0sp"
        android:src="@drawable/tete" />


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:src="@drawable/cercle" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210sp"
        android:text="00:00"
        android:textSize="60sp" />

    <ImageButton
        android:id="@+id/buttonPersonnaliser"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/timer"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="300dp"
        />



<!-- ************************************************************************** -->



    <TextView
        android:id="@+id/sessionTravail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220sp"
        android:layout_marginTop="10sp"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270sp"
        android:layout_marginTop="10sp"
        android:textSize="40dp"
        android:text="/"/>

    <TextView
        android:id="@+id/nbSessionPersonnalise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290sp"
        android:layout_marginTop="10sp"
        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/nomRep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180sp"
        android:layout_marginTop="130sp"
        android:textSize="15dp"
        android:text="Repos"/>

    <TextView
        android:id="@+id/nomTvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180sp"
        android:layout_marginTop="130sp"
        android:textSize="15dp"
        android:text="Travail"/>

</RelativeLayout>